{
  "mcps": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/path/to/your/projects"
      ],
      "startOnStartup": true
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "startOnStartup": false
    }
  },
  "workflows": [
    {
      "name": "Find config files",
      "description": "Search for JSON config files in your project",
      "steps": [
        {
          "mcp": "filesystem",
          "tool": "search_files",
          "args": {
            "path": "/path/to/your/projects",
            "pattern": "**/*.config.json"
          }
        }
      ],
      "trigger": "manual"
    },
{
  "name": "Add note to memory",
      "description": "Store a note in the memory knowledge graph",
      "steps": [
        {
          "mcp": "memory",
          "tool": "create_entities",
          "args": {
            "entities": [
              {
                "name": "demo-note",
                "entityType": "note",
                "observations": ["Example note from MCP Orchestrator. Edit this workflow in the UI!"]
              }
            ]
          }
        }
      ],
      "trigger": "manual"
    }
  ]
}
